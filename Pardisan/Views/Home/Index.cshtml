@if (Model.Content.CounselingTitle != null)
{
    <section class="container-fluid my-4 py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 p-3">

                    <h3 class="IRANSans_Bold mb-2">@Model.Content.CounselingTitle</h3>
                    <p class="text-justify">
                        @Model.Content.CounselingContent
                    </p>
                    <a href="tel:@Model.Content.Cellphone" class="btn btn-pardisan text-white radius10 py-2 px-4 my-3"><i class="fal fa-phone ml-2"></i>تماس بگیرید ! </a>

                </div>
