<section class="container blog-grid mt-5">
    <div class="d-flex flex-row my-3">
        <div class="Dottedstocol ml-3"></div>
        <div class="singletitle">
            <span>@Model.Content.titleForBlogs</span>
        </div>
    </div>
    <div id="owl-blog" class="owl-carousel owl-theme text-right ">
        @foreach (var item in Model.Blogs.Blog)
        {
            <div class="m-3 blog_style">
                <a asp-controller="Blog" asp-action="details" asp-route-id="@item.Id"><img class="card-img-top" src="@item.Image" alt="@item.Title"></a>
                <div class="card-body">
                    <h3 class="mb-2" style="height: 70px;"><a class="text-dark" asp-controller="Blog" asp-action="details" asp-route-id="@item.Id">@item.Title</a></h3>
                    <p class="mb-2">
                        @item.Describtion
                    </p>
                    <span><a href="#">@item.CategoryTitle</a></span>
                    <div class="d-flex flex-row justify-content-between mt-2">
                        <div>
                            <span style="font-size:12px" ><i class="fal fa-clock ml-2"></i>@item.CreatedAt.ToPersianDateTextify(true)</span>
                        </div>
                        <a asp-controller="Blog" asp-action="details" asp-route-id="@item.Id">ادامه مطلب »</a>
                    </div>
                </div>
            </div>
        }

    </div>
</section>



