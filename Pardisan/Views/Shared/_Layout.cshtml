@inject Pardisan.Interfaces.IGlobalDynomicContent repo
@{
    var content = repo.GetAll();

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>پردیسان - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/staticcopy/swiper-bundle.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/Css/Main.css" rel="stylesheet" />
    <link href="~/Css/Style.css" rel="stylesheet" />
    <link href="~/Css/Menu-demo2.css" rel="stylesheet" />
    <link href="~/Css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Css/owl.theme.min.css" rel="stylesheet" />
    <link href="~/Css/hoverimg.css" rel="stylesheet" />
    <link rel="shortcut icon" href="/Img/pardisanfavicon.png" />
    @RenderSection("styles", required: false)
    <script type="text/javascript">window.RAYCHAT_TOKEN = "3fc1bd4d-c1bf-4431-8e89-7769bfeb2fc5"; (function () { d = document; s = d.createElement("script"); s.src = "https://widget-react.raychat.io/install/widget.js"; s.async = 1; d.getElementsByTagName("head")[0].appendChild(s); })();</script>

</head>
<body class="demo2">
    <div class="main_wrap">
        <div class="of-site-mask"></div>

        <div class="off-canvas-wrap ">
            <div class="close-off-canvas-wrap">
                <a href="#" id="of-close-off-canvas">
                    <i class="fal fa-times"></i>
                </a>
            </div>
            <div class="off-canvas-inner">
                <div id="of-mobile-nav" class="mobile-menu-wrap">
                    <ul class="mobile-menu">

                        <li> <a asp-controller="Home" asp-action="Index">صفحه اصلی</a> </li>
                        <li> <a asp-controller="News" asp-action="Index">اخبار</a> </li>
                        <li> <a asp-controller="Blog" asp-action="Index">مقالات</a> </li>
                        <li> <a asp-controller="Project" asp-action="Index">پروژه ها</a> </li>
                        @foreach (var item in content.Data.page)
                        {
                            <li> <a href="/page/@item.Url">@item.Title</a> </li>
                        }
                        <li><a asp-controller="Home" asp-action="ContactUs">تماس باما</a></li>

                    </ul>
                </div>
            </div>
        </div>

        <header class="main_header wide_header">
            <div class="header_container">
                <div class="menu_wrapper menu_sticky">
                    <div class=" mobnav bg-cudark sticky-top w-100" style="background:#fff !important; position: fixed">
                        <div class="pardisan-header mobnav bg-cudark sticky-top w-100" style="background:#fff !important; position: fixed">
                            <div id="navigation" style="height:70px" class="of-drop-down of-main-menu d-flex align-items-center justify-content-between container-fluid px-5" role="navigation">
                                <ul class="menu">
                                    <li class="ml-3 test">
                                        <a href="#" class="current logo">
                                            <img src="~/img/niknet-white.png" style="max-width: 13vw;" />
                                        </a>
                                    </li>

                                    <li> <a asp-controller="Home" asp-action="Index">صفحه اصلی</a> </li>
                                    <li> <a asp-controller="News" asp-action="Index">اخبار</a> </li>
                                    <li> <a asp-controller="Blog" asp-action="Index">مقالات</a> </li>
                                    <li> <a asp-controller="Project" asp-action="Index">پروژه ها</a> </li>
                                    @foreach (var item in content.Data.page)
                                    {
                                        <li> <a href="/page/@item.Url">@item.Title</a> </li>
                                    }
                                    <li><a asp-controller="Home" asp-action="ContactUs">تماس باما</a></li>

                                </ul>


                                <div class="text-left d-flex align-items-center">
                                    @* <span class="text-white mx-4"><i class="fal fa-envelope ml-2"></i>ایمیل : @Email</span>*@

                                    <ul class="social-list px-3">
                                        @if (!string.IsNullOrWhiteSpace(@content.Data.Whatsapp))
                                        {

                                            <li class="mx-2"><a class='icon-media-size' href="https://wa.me/@content.Data.Whatsapp"><i class="fab fa-whatsapp"></i></a></li>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(@content.Data.Instagram))
                                        {
                                            <li class="mx-2"><a class='icon-media-size' href="@content.Data.Instagram"><i class="fab fa-instagram"></i></a></li>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(content.Data.Twitter))
                                        {
                                            <li class="mx-2"><a class='icon-media-size' href="@content.Data.Twitter"><i class="fab fa-twitter"></i></a></li>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(content.Data.Telegram))
                                        {
                                            <li class="mx-2"><a class='icon-media-size' href="https://telegram.me/@content.Data.Telegram"><i class="fab fa-telegram"></i></a></li>
                                        }
                                        @*<li class="mx-2"><a class='icon-media-size' href="https://crm.pardisan-mc.com"><i class="fab fa-sign-in"></i></a></li>*@
                                        <a href="https://crm.pardisan-mc.com" class="btn btn-primary text-white btn-sm" id="mybutton"
                                           style="background: darkcyan">
                                            <span class="text-white">ورود به پنل</span>
                                        </a>
                                    </ul>

                                </div>

                            </div>

                            @*<div class="m_search pt-md-1">
                            <i class="fal fa-search"></i>

                            </div>*@
                            <div class="is-show mobile-nav-button">
                                <img src="~/img/niknet-white.png" style="max-width: 13vw;" />
                                <a id="of-trigger" class="icon-wrap pr-3" href="#"> <i class="fal fa-bars"></i></a>
                            </div>

                            @*<form class="search_wrap mt-lg-0" id="ajax-form-search" method="get" action="">

                            <input type="text" id="search-form-text" class="search-field" value="" name="s" placeholder="کلید واژه مورد نظر ...">
                            <button><i class="fal fa-search"></i></button>

                            <input type="hidden" name="post_type" value="product">
                            <div id="ajax-search-result"></div>
                            </form>*@
                        </div>
                    </div>
                </div>



        </header>
        <div>

            <div class="clearfix"></div>

            <div class="clearfix">
            </div>

            <div style="margin-top:45px">
                @RenderBody()
            </div>

            @*<div class="container">
            <main role="main" class="pb-3">
            </main>
            </div>*@
        </div>

        <a class="btn upsert-request-btn d-flex align-items-center" style="right:10px; direction: rtl;" href="tel: @content.Data.Phone">
            <i class='fal fa-phone' style='font-size:36px; margin-right: 5px'></i>
            <span>تماس با ما</span>
        </a>
        <!-- <div class="drawer-request">
            <div class="child-drawer">

                <div class="pardisan-storyy">
                    <div class="pardisan-story" id="pardisan-story">
                    </div>
                </div>
            </div>

        </div> -->

        <footer class="mt-5 pt-4 pb-4 ">
            <div class="container">
                <div class="row">
                    <div class="footer-icon-img mx-2"><img src="~/img/logo3New.png" style="width:150px !important" /></div>
                </div>
                <div class="row mt-3 px-3 ">
                    <div class="col-lg-3 px-md-5">
                        <div class="footer-column-item">
                            <h4 class="">ارتباط با ما</h4>
                            <ul>
                                <li class="mb-2"><p>@content.Data.Address</p></li>
                                <li class="mb-2"><p>شماره تماس : <span>@content.Data.Phone</span></p></li>
                                <li>
                                    <div class="media-footer-items w-100">
                                        @if (!string.IsNullOrWhiteSpace(content.Data.Whatsapp))
                                        {
                                            <a href="https://wa.me/@content.Data.Whatsapp" style="font-size: 21px"><i class="fab text-success fa-whatsapp"></i></a>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(content.Data.Instagram))
                                        {
                                            <a href="@content.Data.Instagram" class="mx-3" style="font-size: 21px"><i class="fab text-danger fa-instagram"></i></a>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(content.Data.Telegram))
                                        {
                                            <a href="https://telegram.me/@content.Data.Telegram" style="font-size: 21px"><i class="fab text-primary fa-telegram"></i></a>
                                        }

                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 px-md-5 ">
                        <div class="footer-column-item">
                            <h4>لینک های سریع</h4>
                            <ul>
                                <li><a asp-controller="Blog" asp-action="Index">مقالات</a></li>
                                <li><a asp-controller="Project" asp-action="Index">پروژه ها</a></li>
                                <li><a asp-controller="aparat" asp-action="Index">ویدیوها</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 px-md-5  ">
                        <div class="footer-column-item">
                            <h4>وب سایت ها</h4>
                            <ul>
                                <li><a href="@content.Data.flink">@content.Data.flinkName</a></li>
                                <li><a href="@content.Data.slink">@content.Data.slinkName</a></li>
                                <li><a href="@content.Data.tlink">@content.Data.tlinkName</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 px-md-5  ">
                        <div class="footer-column-item">
                            <h4>بازدیدها</h4>
                            <ul>
                                <li><a> بازدید ها در روز: @content.Data.dayCountVisit</a></li>
                                <li><a> بازدید ها در هفته: @content.Data.weekCountVisit</a></li>
                                <li><a> بازدید ها در ماه: @content.Data.monthCountVisit</a></li>
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="row">

                    <div class="container-fluid">
                        <div class="copyright" style="background: #264f71 !important;"> <u><a href="https://niknet.co/">شرکت نیک نت</a></u> | تمام حقوق محفوظ است</div>
                    </div>

                </div>
            </div>
        </footer>
        <div class="progress-wrap" style="display:none">
            <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
                <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
            </svg>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/staticcopy/swiper-bundle.min.js"></script>
        <script src="~/staticcopy/kalamarket/assets/js/vendor/jquery.ez-plus.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/owl.carousel.js"></script>
        <script src="~/js/Custom.js"></script>
        <script src="~/js/Menu.js"></script>

        @RenderSection("modals", required: false)

        @RenderSection("scripts", required: false)

</body>
</html>
